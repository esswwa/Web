@using WebAPI.Models
@model Brand

@{
    ViewData["Title"] = "Edit Brand Page";
}

<h2>Редактирование задачи</h2>
<form asp-action="EditBrand" asp-route-id="@Model.BrandId" class="needs-validation" novalidate="form">
    <input asp-for="BrandId" class="form-control" hidden />
    <input asp-for="BrandUserId" class="form-control" hidden />
    <div class="form-group">
        <label asp-for="BrandName" class="col-md-4">Название бренда</label>
        <div class="col-md-8">
            <input asp-for="BrandName" class="form-control" />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BrandDescription" class="col-md-4">Описание бренда</label>
        <div class="col-md-8">
            <textarea asp-for="BrandDescription" class="form-control"></textarea>
            <span asp-validation-for="BrandDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BrandIsConfirm" class="col-md-4">Подтверждение выполнения бренда</label>
        <div class="col-md-8">
            <input asp-for="BrandIsConfirm" type="checkbox" />
            <span asp-validation-for="BrandIsConfirm" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>
